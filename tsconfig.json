{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@connections/*": ["./src/connections/*"],
      "@user/*": ["./src/user/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/utils/config/*"],
      "@constants/*": ["./src/utils/constants/*"],
      "@cron/*": ["./src/cron/*"]
    }
  }
}
